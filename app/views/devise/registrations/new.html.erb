<%= render "shared/third-header" %>

<%= form_with model: @user, url: user_registration_path, class:'form-main', local: true do |f| %>
  <div class='form-signin w-100 m-auto text-center'>
    <div class='form-header text-center'>
      <svg xmlns="http://www.w3.org/2000/svg" width="72" height="57" fill="currentColor" class="bi bi-person-plus signin-icon" viewBox="0 0 16 16">
        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
        <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
      </svg>
      <h1 class='h3 mb-4 fs-1 fw-bolder text-success'>新規登録</h1>
    </div>
  
    <div class="form-floating">
      <%= f.text_area :nickname, class:"form-control rounded-0 rounded-top form-nickname", id:"nickname", placeholder:"ニックネーム", autofocus: true %>
      <label for="floatingInput">ニックネーム</label>
    </div>
    <div class="form-floating">
      <%= f.email_field :email, class:"form-control rounded-0 form-email", id:"email", placeholder:"メールアドレス" %>
      <label for="floatingInput">メールアドレス</label>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, class:"form-control mb-4 rounded-0 rounded-bottom", id:"password", placeholder:"6文字以上の半角英数字" %>
      <label for="floatingPassword">パスワード</label>
    </div>
  
    <div class='register-btn'>
      <%= f.submit "はじめる" ,class:"w-100 btn btn-lg btn-success" %>
    </div>
  </div>
  <% end %>

<%= render "shared/footer" %>