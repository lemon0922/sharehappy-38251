<%= render "shared/header" %>

<%# 予定編集 %>
<div class='w-25 bg-light justify-content-center align-items-center p-4 mx-auto border border-2 shadow p-3 m-5 bg-body rounded'>
  <h3 class='h3 text-center my-4 text-success'>
    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-pencil-square pb-1" viewBox="0 0 16 16">
      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
    </svg>
    イベント編集
  </h3>

  <%= form_with(model: @event, local: true) do |f| %>
    <div class="field my-4">
      <%= f.text_field :title, class:'form-control', placeholder: "タイトル"%>
    </div>

    <div class="field mb-4">
      <%= f.datetime_select :start_time %>
    </div>

    <div class="field mb-4">
      <%= f.datetime_select :end_time %>
    </div>

    <div class="field mb-5">
      <%= f.text_area :content, class:'form-control', placeholder: '詳細' %>
    </div>

  <div class="submit d-flex justify-content-evenly mb-4">
    <%= f.submit '更新する', class: 'btn btn-outline-success btn-lg rounded-pill'%>
    <%=link_to 'もどる', event_path, class:"btn btn-outline-secondary btn-lg rounded-pill"%>
  </div>
<% end %>
</div>
<%# /予定編集 %>

<%= render "shared/footer" %>