<%= render "shared/header" %>

<%# 新規作成 %>
<div class='w-25 bg-light justify-content-center align-items-center p-4 mx-auto border border-2 shadow p-3 m-5 bg-body rounded'>
  <h3 class='h3 text-center my-4 text-success'>
    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cursor pb-1" viewBox="0 0 16 16">
      <path d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103zM2.25 8.184l3.897 1.67a.5.5 0 0 1 .262.263l1.67 3.897L12.743 3.52 2.25 8.184z"/>
    </svg>
    新規イベント
  </h3>
  <%= form_with(model: @event, local: true) do |f| %>
    <div class="field my-4">
      <%= f.text_field :title, class:'form-control', placeholder: "タイトル"%>
    </div>

    <div class="field mb-4">
      <%= f.datetime_select :start_time %>
    </div>

    <div class="field mb-4">
      <%= f.datetime_select :end_time %>
    </div>

    <div class="field mb-5">
      <%= f.text_area :content, class:'form-control', placeholder: '内容' %>
    </div>

    <div class="submit d-flex justify-content-evenly mb-4">
      <%= f.submit '追加する', class: 'btn btn-outline-success btn-lg rounded-pill' %>
      <%=link_to 'もどる', events_path, class:"btn btn-outline-secondary btn-lg rounded-pill"%>
    </div>
  <% end %>
</div>
<%# /新規作成 %>

<%= render "shared/footer" %>