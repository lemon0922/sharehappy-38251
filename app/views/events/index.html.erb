<%= render "shared/header" %>
 
<%# メイン画面 %>
<div class="main w-100 h-100 d-flex align-items-center">
  <%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

    <% events.each do |event| %>
      <div>
        <%= link_to event_path(event.id), class:'text-decoration-none text-success' do %>
          <%= event.start_time.strftime('%H:%M~ ') %><%= event.title %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
<%# /メイン画面 %>

<%= render "shared/footer" %>