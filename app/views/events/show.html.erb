<%= render "shared/second-header" %>

<p id="notice"><%= notice %></p>

<p>
  <strong>タイトル</strong>
  <%= @event.title %>
</p>

<p>
  <strong>時間</strong>
  <%= @event.start_time.strftime("%Y-%m-%d") %>
</p>

<p>
  <strong>内容</strong>
  <%= @event.content %>
</p>

<%= link_to '編集', edit_event_path(@event) %>
<%= link_to '削除', event_path(@event.id), method: :delete %>
<%= link_to '戻る', events_path %>

<%= render "shared/footer" %>