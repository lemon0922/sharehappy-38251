<%# メッセージ %>
<% if current_user.id == message.user_id %>
  <div class='message m-3 d-flex justify-content-end'>
    <div class='message-box pt-1'>
      <div class="lower-message border border-success px-3">
        <div class="message-content fs-5">
          <%= message.content %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class='message m-3 d-flex'>
    <div class='icon'>
      <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="me-2 text-success" viewBox="0 0 16 16">
        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
      </svg>
    </div>

    <div class='message-box pt-1'>
      <div class="upper-message">
        <div class="message-user text-secondary">
          <%= message.user.nickname %>
        </div>
      </div>
      <div class="lower-message border border-success px-3">
        <div class="message-content fs-5">
          <%= message.content %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%# /メッセージ %>
