<%= render "shared/header" %>

<%# 予定詳細 %>
<div class='main w-100 h-100 d-flex align-items-center'>
  <div class='w-50 h-50 bg-light justify-content-center align-items-center p-4 mx-auto border border-2 shadow p-3 m-5 bg-body rounded'>
    <p class='text-center text-success'>
      <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-person-circle mt-4 mb-3" viewBox="0 0 16 16">
        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
      </svg>
    </p>
    <h3 class='h3 text-center mb-4 text-success'>アカウント情報</h3>
    
    <div class='d-flex fs-5 border-bottom mb-4 text-center'>
      <p class='text-secondary'>ニックネーム ：  </p>
      <p><%= @user.nickname %></p>
    </div>
    <div class='d-flex fs-5 border-bottom mb-4'>
      <p class='text-secondary'>メールアドレス ：  </p>
      <p><%= @user.email %></p>
    </div>
  
    <div class='d-flex justify-content-center my-4'>
      <%= link_to 'もどる', events_path, class:'btn btn-outline-secondary fs-5 rounded-pill' %>
    </div> 
  </div>
</div>
<%# /予定詳細 %>

<%= render "shared/footer" %>